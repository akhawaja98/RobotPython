from tkinter import * # Imports all functions from TKinter module
import random # Imports functions from Random module

# Code taken from "Foundation" file in our group GitHub repository
regionFrame = Tk()
regionFrame.geometry("1280x720") # Sets screen resolution/size
regionFrame.title("US Tour Guide") # Sets title for program window

### My Code
regionFrame = Canvas(regionFrame, height = 720, width = 1280, bg="white") # Creates canvas, white bg, size of resolution.
regionFrame.pack() # Executes

# Arena
regionFrame.create_rectangle(5, 5, 1275, 715) # Rectangle = Arena

# Randon Moving Object
ball = regionFrame.create_oval(100, 100, 200, 200) # Creates Ball

for i in range(100): #Just to give enough movement for testing
    regionFrame.move(ball, random.randint(-100,100), random.randint(-100, 100)) # Random Movement code
    regionFrame.update() # Updates display to show change in movement
    regionFrame.after(500) # Waits 500ms before moving again
    print(regionFrame.coords(ball)) # Print coordinates for collision testing

regionFrame.mainloop() # Loops the creation of the window/frame
