from tkinter import * # Imports all functions from TKinter module
import math # Imports all function from Math module

# Code taken from "Foundation" file in our group GitHub repository
regionFrame = Tk()
regionFrame.geometry("1280x720") # Sets screen resolution/size
regionFrame.title("US Tour Guide") # Sets title for program window

# My Code
regionFrame = Canvas(regionFrame, height = 720, width = 1280, bg="white") # Creates canvas, white bg, size of resolution.
regionFrame.pack() # Executes
    
start = regionFrame.create_line(10, 10, 10, 710, fill="green", width=10) # Start Line - Green = Go
finish = regionFrame.create_line(1270, 10, 1270, 710, fill="red", width=10) # Finish Line - Red = Stop

### Distance from Start to Finish Function

def distance(x1,y1,x2,y2): # Function that takes line coordinates and calculates distance using math module function 'Sqrt' (Square Root)
    x1 = 10
    y1 = 710
    x2 = 1270
    y2 = 710
    distanceFrom = math.sqrt((x2 - x1)**2 + (y2 - y1)**2)
    print(str(distanceFrom)) # Prints result

distance(10,710,1270,710) # Line coordinates


regionFrame.mainloop() # Loops the creation of the window/frame
